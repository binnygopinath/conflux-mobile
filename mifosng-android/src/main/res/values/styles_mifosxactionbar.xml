<resources>

    <style name="Theme.Mifosxactionbar" parent="AppTheme">
        <item name="actionBarItemBackground">@drawable/selectable_background_mifosxactionbar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>]
        <item name="android:titleTextStyle">@style/TextColor</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="popupMenuStyle">@style/PopupMenu.Mifosxactionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mifosxactionbar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Mifosxactionbar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Mifosxactionbar</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Mifosxactionbar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_mifosxactionbar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_mifosxactionbar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mifosxactionbar</item>

        
    </style>

    <style name="ActionBar.Solid.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_mifosxactionbar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_mifosxactionbar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_mifosxactionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Mifosxactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_mifosxactionbar</item>
        <item name="progressBarStyle">@style/ProgressBar.Mifosxactionbar</item>
    </style>
	
    <style name="PopupMenu.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mifosxactionbar</item>	
    </style>
	
    <style name="DropDownListView.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_mifosxactionbar</item>
    </style>

    <style name="ActionBarTabStyle.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_mifosxactionbar</item>
    </style>
	
    <style name="DropDownNav.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_mifosxactionbar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_mifosxactionbar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_mifosxactionbar</item>
    </style>
    
    <style name="ProgressBar.Mifosxactionbar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_mifosxactionbar</item>
    </style>
    
    <style name="ActionButton.CloseMode.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_mifosxactionbar</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mifosxactionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Mifosxactionbar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Mifosxactionbar</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>