<resources>

    <style name="Theme.Mifosxactionbar" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">#000000</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="android:actionBarItemBackground">@drawable/selectable_background_mifosxactionbar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Mifosxactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mifosxactionbar</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Mifosxactionbar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Mifosxactionbar</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_mifosxactionbar</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_mifosxactionbar</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Mifosxactionbar</item>z
        
        
    </style>

    <style name="ActionBar.Solid.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_mifosxactionbar</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_mifosxactionbar</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_mifosxactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mifosxactionbar</item>
    </style>

    <style name="ActionBar.Transparent.Mifosxactionbar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_mifosxactionbar</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Mifosxactionbar</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Mifosxactionbar.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Mifosxactionbar</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Mifosxactionbar</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>