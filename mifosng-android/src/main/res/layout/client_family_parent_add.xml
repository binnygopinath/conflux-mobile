<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollviewid"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="2dp">


    <RelativeLayout
        android:id="@+id/rl_family_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_spinner_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@drawable/tableheading"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sp_add_parent"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_bg"
                    android:textColor="#f5420000" />

                <!--<ImageButton
                    android:id="@+id/bt_add_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2.54"
                    android:background="@color/colorPrimary" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_first_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_add_parent_first_name"
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_weight="0.05"
                    android:text="First Name"
                    style="@style/FormLabel"/>

                <EditText
                    android:id="@+id/et_add_parent_first_name"
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.95"
                    android:background="@drawable/edit_box"
                    android:cursorVisible="true"
                    android:ellipsize="start"
                    android:focusable="true"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_first_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_parent_Last_name"
                    android:layout_width="108dp"
                    android:layout_height="34dp"
                    android:layout_weight="0.05"
                    android:text="Last Name"
                    style="@style/FormLabel"/>

                <EditText
                    android:id="@+id/et_add_parent_last_name"
                    android:layout_width="330dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.95"
                    android:background="@drawable/edit_box"
                    android:ellipsize="end"
                    android:focusable="true"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
