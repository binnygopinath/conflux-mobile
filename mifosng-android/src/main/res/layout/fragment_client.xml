<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:id="@+id/buttons"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:paddingBottom="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_with_cgt_grt_permission"
            android:weightSum="2"
            android:visibility="gone">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".95"
                    android:gravity="center">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:id="@+id/cgt"
                        android:elevation="10dp"
                        android:text="CGT"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:background="#00f6b67c"
                        android:gravity="center"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".05"
                    android:gravity="center">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#526cae" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight=".95"
                    android:gravity="center">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:id="@+id/grt"
                        android:elevation="14dp"
                        android:text="GRT"
                        android:textSize="20sp"
                        android:textColor="#ffffff"
                        android:background="#00f85b5b"
                        android:gravity="center"
                        android:layout_weight=".6"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_with_cgt_permission"
            android:weightSum="1"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/cgt_button"
                android:elevation="10dp"
                android:text="CGT"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00f6b67c"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/user_with_grt_permission"
            android:weightSum="1"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/grt_button"
                android:elevation="10dp"
                android:text="GRT"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="#00f6b67c"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/lv_clients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="false"
        android:layout_above="@id/buttons"/>
</RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>