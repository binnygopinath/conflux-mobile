<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fillViewport="false"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <ScrollView
        android:id="@+id/sl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_permanent"
                        style="@style/FormHeader"
                        android:text="@string/permanent_address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/comment_box"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">


                    <TextView
                        android:id="@+id/tv_new_village"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Village" />

                    <EditText
                        android:id="@+id/et_new_village"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_new_po"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Post Office Name" />

                    <EditText
                        android:id="@+id/et_new_po"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_new_dist"
                        style="@style/FormLabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:text="District" />

                    <EditText
                        android:id="@+id/et_new_dist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_new_state"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="State" />

                    <EditText
                        android:id="@+id/et_new_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_new_pin"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Pincode" />

                    <EditText
                        android:id="@+id/et_new_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:paddingTop="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_current"
                            style="@style/FormHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_weight="0.8"
                            android:text="@string/current_address" />

                        <CheckBox
                            android:id="@+id/cb_current_address"
                            style="@style/FormLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:checked="true"
                            android:text="Same as Above" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_current_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/comment_box"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_current_village"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Village" />

                    <EditText
                        android:id="@+id/et_current_village"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_current_po"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Post Office Name" />

                    <EditText
                        android:id="@+id/et_current_po"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_current_dist"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="District" />

                    <EditText
                        android:id="@+id/et_current_dist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_current_state"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="State" />

                    <EditText
                        android:id="@+id/et_current_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:inputType="textNoSuggestions"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_current_pin"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Pincode" />

                    <EditText
                        android:id="@+id/et_current_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:paddingTop="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/tv_mobile_number"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Mobile Number" />

                    <EditText
                        android:id="@+id/et_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:paddingTop="10dp" />

                    <TextView
                        android:id="@+id/tv_phone_number"
                        style="@style/FormLabel"
                        android:paddingTop="10dp"
                        android:text="Phone Number" />

                    <EditText
                        android:id="@+id/et_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_box"
                        android:paddingTop="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_next"
            style="@style/button"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.5"
            android:gravity="center"
            android:onClick="extraDetails"
            android:text="Next" />

        <Button
            android:id="@+id/bt_save"
            style="@style/button"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="Save" />
    </RelativeLayout>

</RelativeLayout>

