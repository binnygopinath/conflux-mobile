<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mifos.mifosxdroid.fragments.ManageClientFragment"
    android:layout_marginTop="10dp"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_group_name"
        android:textSize="20dp"
        android:text="@string/group_name"
        android:gravity="center"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:id="@+id/ll_add_client"
        android:layout_below="@id/tv_group_name">
            <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_marginBottom="9dp"
                android:paddingLeft="10dp"
                android:id="@+id/ac_tv_search_client"
                android:hint="Enter Client Name "
                android:background="@drawable/manager_client_autotextview_style"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:text="ADD"
                android:id="@+id/btn_add_new_client"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:layout_marginBottom="9dp"
                android:background="@color/colorPrimary"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    android:id="@+id/ll_update"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="0dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:id="@+id/btn_update_changes"
            android:text="@string/update_changes"
            android:layout_gravity="center" />
    </LinearLayout>
    <ListView
        android:layout_margin="10dp"
        android:layout_below="@id/ll_add_client"
        android:layout_above="@id/ll_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_client"/>
</RelativeLayout>
