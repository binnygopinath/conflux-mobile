<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollviewid"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="0dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="8dp">

    <ScrollView
        android:id="@+id/sl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_income_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tableheading"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_income_details"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/income_details"
                        android:textColor="#f5420000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_income"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_weight="0.02"
                        android:text="0.00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/bt_income_row"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_first_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <Spinner
                        android:id="@+id/sp_income_spinner"
                        android:layout_width="165dp"
                        android:layout_height="43dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="0.05"
                        android:background="@drawable/spinner_bg"
                        android:paddingRight="20dp" />

                    <EditText
                        android:id="@+id/et_income_amount"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="0.95"
                        android:background="@drawable/edit_box"
                        android:cursorVisible="true"
                        android:ellipsize="start"
                        android:focusable="true"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:paddingTop="7dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_second_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">


                    <Spinner
                        android:id="@+id/sp_next_income_spinner"
                        android:layout_width="165dp"
                        android:layout_height="43dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="0.05"
                        android:background="@drawable/spinner_bg"
                        android:paddingRight="20dp" />

                    <EditText
                        android:id="@+id/et_next_income_amount"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="0.95"
                        android:background="@drawable/edit_box"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:paddingTop="7dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_blank_space"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_expenses_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/tableheading"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_expenses_details"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="@string/expenses_details"
                        android:textColor="#f5420000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_expenses"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_weight="0.02"
                        android:text="0.00"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/bt_expenses_row"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_second_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <Spinner
                        android:id="@+id/sp_expenses_spinner"
                        android:layout_width="165dp"
                        android:layout_height="43dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="0.05"
                        android:background="@drawable/spinner_bg"
                        android:paddingRight="20dp" />


                    <EditText
                        android:id="@+id/et_expenses_amount"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="0.95"
                        android:background="@drawable/edit_box"
                        android:cursorVisible="true"
                        android:ellipsize="start"
                        android:focusable="true"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:paddingTop="7dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_second_expense_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <Spinner
                        android:id="@+id/sp_next_expenses_spinner"
                        android:layout_width="165dp"
                        android:layout_height="43dp"
                        android:layout_marginRight="6dp"
                        android:layout_weight="0.05"
                        android:background="@drawable/spinner_bg"
                        android:paddingRight="20dp" />


                    <EditText
                        android:id="@+id/et_next_expenses_amount"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="0.95"
                        android:background="@drawable/edit_box"
                        android:ellipsize="end"
                        android:focusable="true"
                        android:gravity="right"
                        android:inputType="numberDecimal"
                        android:paddingTop="7dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_expenses_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_second_blank"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/sl_layout"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/bt_save"
            style="@style/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Save" />

    </RelativeLayout>

</RelativeLayout>